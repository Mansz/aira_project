# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env on your production server and update the values

# Application
APP_NAME="Aira Project"
APP_ENV=production
APP_KEY=base64:your-app-key-here
APP_DEBUG=false
APP_URL=https://api.example.com

# Frontend URLs
FRONTEND_URL=https://frontend.example.com
ADMIN_PANEL_URL=https://frontend.example.com

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# Session Configuration for Production
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_DOMAIN=.example.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE_COOKIE=lax

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=frontend.example.com,api.example.com

# CORS Configuration (handled in config/cors.php)
# Make sure your domains are properly configured there

# Cache
CACHE_DRIVER=file

# Queue
QUEUE_CONNECTION=sync

# Mail
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# WhatsApp (if used)
WHATSAPP_GATEWAY_URL=https://api.whatsapp.com
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_DEVICE_ID=your-device-id
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret
STORE_NAME="Aira Store"
STORE_PHONE=+62123456789
STORE_CS_HOURS="09:00 - 17:00 WIB"

# Security
# Generate a new APP_KEY using: php artisan key:generate
# Make sure to use strong, unique passwords for database and other services
